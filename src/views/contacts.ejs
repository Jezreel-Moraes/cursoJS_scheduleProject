<%- include('includes/head'); %> <%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <div class="row my-3">
        <h1 class="text-center">Contatos</h1>
        <p class="text-center lead">Adicione ou edite seus contatos.</p>
        <% if (contact._id) { %>
          <form class="form-contact" action="/contacts/edit/<%- contact._id %>" method="POST">
        <% } else { %>
          <form class="form-contact" action="/contacts/register" method="POST"> 
        <% } %>
          
          <input type="hidden" name="_csrf" value="<%- csrfToken %>" />
          <div class="form-group mb-3">
            <label class="form-label">Nome</label>
            <input
              tabindex="0"
              type="text"
              value="<%- contact.name %>"
              class="form-control"
              name="name"
            />
          </div>
          <div class="form-group mb-3">
            <label class="form-label">Sobrenome</label>
            <input
              type="text"
              value="<%- contact.lastName %>"
              class="form-control"
              name="lastName"
            />
          </div>
          <div class="form-group mb-3">
            <label class="form-label">E-mail</label>
            <input
              type="email"
              value="<%- contact.email %>"
              class="form-control"
              name="email"
            />
          </div>

          <div class="form-group mb-3">
            <label class="form-label">Telefone</label>
            <input
              type="tel"
              value="<%- contact.tel %>"
              class="form-control"
              name="tel"
            />
          </div>

          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
        <ul class="errors-list"></ul>
        <%- include('includes/messages');%>
      </div>

      <div class="col-lg-2"></div>
    </div>
  </div>

  <%- include('includes/footer'); %>
</div>
