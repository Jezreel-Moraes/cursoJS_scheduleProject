<%- include('includes/head'); %> <%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <div class="row my-3">
        <h1 class="text-center">Agenda</h1>
        <p class="text-center lead">Seus contatos est√£o abaixo.</p>

        <%- include('includes/messages');%> <% if (contacts.length) { %>

        <div class="responsive-table my-5">
          <table class="table">
            <thead>
              <th>Nome</th>
              <th>Sobrenome</th>
              <th>E-mail</th>
              <th>Telefone</th>
              <th>Editar</th>
              <th>Remover</th>
            </thead>

            <% contacts.forEach(contact => { %>
            <tr>
              <td><%- contact.name %></td>
              <td><%- contact.lastName %></td>
              <td><%- contact.email %></td>
              <td><%- contact.tel %></td>
              <td><a href="/contacts/<%- contact._id %>">Editar</a></td>
              <td>
                <a
                  class="text-danger"
                  href="/contacts/delete/<%- contact._id %>"
                  >Remover</a
                >
              </td>
            </tr>
            <% }); %>
          </table>
          <% } else { %>

          <p class="text-center lead">Nenhum contato cadastrado!</p>

          <% } %>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
