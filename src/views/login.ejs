<%- include('includes/head'); %> <%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <div class="row my-3">
        <h1 class="text-center">Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
      </div>
      <%- include('includes/messages'); %>

      <div class="row my-3">
        <div class="col-lg my-5">
          <h4 class="text-center">Faça seu cadastro</h4>
          <p class="text-center lead">
            Preencha o formulário caso ainda não possua uma conta:
          </p>

          <form class="form-register" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%- csrfToken %>" />
            <div class="mb-3">
              <label class="form-label">Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>

            <div class="mb-3">
              <label class="form-label">Sua senha</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary">
              Criar minha conta
            </button>
          </form>
          <ul class="errors-list"></ul>
        </div>

        <div class="col-lg my-5">
          <h4 class="text-center">Faça seu login</h4>
          <p class="text-center lead">
            Faça seu login abaixo caso já possua uma conta:
          </p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%- csrfToken %>" />
            <div class="mb-3">
              <label class="form-label">Seu e-mail</label>
              <input type="email" class="form-control" name="email" />
            </div>

            <div class="mb-3">
              <label class="form-label">Sua senha</label>
              <input type="password" class="form-control" name="password" />
            </div>

            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
          <ul class="errors-list"></ul>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer'); %>
